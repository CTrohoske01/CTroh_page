        <item>protein 5.9g 12% DV</item>
        <item>carbohydrates 30.5g 10% DV</item>
        <item>fat 14.3g 22% DV</item>
        <item>cholesterol 64mg 21% DV</item>
        <item>sodium 352.1mg 14% DV</item>
    </recList>
</recipe>
